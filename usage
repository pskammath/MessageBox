#To use The Message Box


#Add dependancy in your gradle :    

implementation 'com.github.bumptech.glide:glide:4.12.0'
annotationProcessor 'com.github.bumptech.glide:compiler:4.12.0'

 new MessageBox(LoginActivity.this).show(MessageBox.getConfig(
                            "Title",
                            "Message",
                            "Input Hint Text", "Ok button Text", "Cancel Button Text",
                            true / false, "image url"
                    ), new MessageBox.responseLstnr() {
                        @Override
                        public void onOk() {


                        }

                        @Override
                        public void onCancel() {

                        }

                        @Override
                        public void getInput(String input) {

                        }
                    });


                }
